<h1 class="title">Produtos</h1>
<div class="products">
    {{!-- {{#if products.lenght }}
        <p>Tem algo</p>
    {{else}}
        <p>Nenhum produto encontrado!</p>
    {{/if}} --}}
    {{#each products}}
    <div class="product">
        <img src="{{this.image}}" alt="{{this.name}}">
        <h3>{{this.name}}</h3>
        <p>R${{this.price}}</p>
        <div class="actions">
            <a class="btn" href="/products/{{this._id}}">Detalhes</a>
            <a class="btn btn-edit" href="/products/edit/{{this._id}}">Editar</a>
        </div>
    </div>
    {{/each}}
</div>